<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.masofino.birp.chatclient.controllers.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Chat Client - Register" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <VBox spacing="10.0" alignment="CENTER" maxWidth="300.0">
            <TextField fx:id="usernameField" promptText="Username" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />

            <Button fx:id="registerButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register" />

            <Label text="Already have an account?" />
            <Button fx:id="loginNavigationButton" text="Login" onAction="#onLoginNavigationClick" />

            <Label fx:id="errorMessageLabel" textFill="RED" wrapText="true" />
        </VBox>
    </children>
</VBox>